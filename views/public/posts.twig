{% extends './layouts/layout_posts.twig' %}

{% block body %}
   <!-- Begin page content -->
   <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          {% for post in posts %}
          <div class="post-preview">
            <a href="{{ post.link }}">
              <h2 class="post-title">
                {{ post.title|e }}
              </h2>
              <h3 class="post-subtitle">
                Problems look mighty small from 150 miles up
              </h3>
            </a>
            <p class="post-meta">Posted on {{ post.create_date }}</p>
          </div>
          <hr>
          {% endfor %}
          
          <!-- Pager -->
          <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
          </div>
        </div>
      </div>
{% endblock %}
